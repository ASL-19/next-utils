{
  "name": "@asl-19/next-utils",
  "version": "0.4.0",
  "description": "Shared Next.js utility functions for ASL19 projects",
  "author": {
    "name": "Grant Heaslip",
    "email": "grant@asl19.org",
    "url": "https://asl19.org/"
  },
  "license": "GPL-3.0-or-later",
  "repository": "ASL-19/next-utils",
  "engines": {
    "node": ">= 16"
  },
  "files": [
    "dist/**/*.js",
    "types/**/*.d.ts"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "types/next-utils.d.ts",
  "sideEffects": false,
  "scripts": {
    "api-extractor:check": "api-extractor run --verbose",
    "api-extractor:update": "api-extractor run --local --verbose",
    "api-documenter:update": "api-documenter markdown --input-folder ./api-extractor --output-folder ./docs",
    "build": "npm run clean-dist && concurrently --names='build-cjs,build-esm' 'npm run build-cjs' 'npm run build-esm'",
    "build-cjs": "tsc --project tsconfig-cjs.json",
    "build-esm": "tsc --project tsconfig-esm.json",
    "build-and-update-api": "npm run build && npm run api-extractor:update && npm run api-documenter:update",
    "clean-dist": "rm -rf ./dist/",
    "eslint": "eslint . --ext js,ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@asl-19/eslint-config": "^0.4.0",
    "@emotion/react": "^11.4.1",
    "@microsoft/api-documenter": "^7.13.55",
    "@microsoft/api-extractor": "^7.18.12",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "jest": "^27.2.4",
    "next": "^12.0.7",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "next": "^11.1.0 || ^12.0.7"
  }
}
