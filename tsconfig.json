{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "incremental": true,
    "module": "preserve", // "esnext" breaks next/router.js imports (unclear why)
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "target": "es2021"
  },
  "include": [
    "*.js",
    "*.ts",
    ".eslintrc.js",
    "src/**/*.ts*"
  ]
}
